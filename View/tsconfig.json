{
  "compilerOptions": {
    "target": "es5", // 你可以保持target为es5
    "lib": ["es2015", "dom"], // 添加es2015
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "types": ["webpack-env", "node"],
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "tests/**/*.vue"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
